<% layout('layouts/boilerplate') %>

    <div class="row">
        <h1 class="text-center">Edit Spot</h1>
        <div class="col-6 offset-3">
            <form action="/spots/<%= spot._id %>?_method=PUT" method="post" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title:</label>
                    <input class="form-control" type="text" name="spot[title]" id="title" value="<%= spot.title %>" required>
                    <div class="valid-feedback">
                        good!
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="location">Location:</label>
                    <input class="form-control" type="text" name="spot[location]" id="location" value="<%= spot.location %>" required>
                    <div class="valid-feedback">
                        good!
                    </div>
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Add Image(s)</label>
                    <input class="form-control" type="file" id="image" name="image" multiple>
                </div>
    
                <div class="mb-3">
                    <label class="form-label" for="price">Price:</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="price-label">$</span>
                        <input id="price" name="spot[price]" type="text" class="form-control" placeholder="0.00" aria-label="Price" aria-describedby="price-label"
                        value="<%= spot.price %>" required>
                        <div class="valid-feedback">
                            good!
                        </div>
                      </div>
                </div>
    
                <div class="mb-3">
                    <label class="form-label" for="description">Description:</label>
                    <textarea class="form-control" type="text" name="spot[description]" id="description" required><%= spot.description %></textarea>
                    <div class="valid-feedback">
                        good!
                    </div>
                </div>
                <div class="mb-3">
                    <% spot.images.forEach(function(img, i) { %>
                        <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="">
                        <div class="form-check-inline">
                            <input type="checkbox" id="image-<%= i %>" name="deleteImages[]" value="<%= img.filename %>">
                        </div>
                        <label for="image-<%= i %>">Delete</label>
                    <% }) %>
                </div>

                <div class="mb-3">
                    <button class="btn btn-info">Update</button>
                </div>
            </form>
        </div>
    </div>