<% layout('layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center">New Spot</h1>
    <div class="col-6 offset-3">
        <form action="/spots" method="post" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title:</label>
                <input class="form-control" type="text" name="spot[title]" id="title" required>
                <div class="valid-feedback">
                    good!
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="location">Location:</label>
                <input class="form-control" type="text" name="spot[location]" id="location" required>
                <div class="valid-feedback">
                    good!
                </div>
            </div>
            
            <div class="mb-3">
                <label for="image" class="form-label">Image(s)</label>
                <input class="form-control" type="file" id="image" name="image" multiple>
            </div>

            <!-- <div class="mb-3">
                <label class="form-label" for="image">Image Url:</label>
                <input class="form-control" type="text" name="spot[image]" id="image" required>
                <div class="valid-feedback">
                    good!
                </div>
            </div> -->

            <div class="mb-3">
                <label class="form-label" for="price">Price:</label>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="price-label">$</span>
                    <input id="price" name="spot[price]" type="text" class="form-control" placeholder="0.00" aria-label="Price" aria-describedby="price-label" required>
                    <div class="valid-feedback">
                        good!
                    </div>
                  </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description:</label>
                <textarea class="form-control" type="text" name="spot[description]" id="description" required></textarea>
                <div class="valid-feedback">
                    good!
                </div>
            </div>
            
            <div class="mb-3">
                <button class="btn btn-success">Submit</button>
            </div>
        </form>
    </div>
</div>